#include <bits/stdc++.h>
#define ll long long

using namespace std;
void solution(){
    int n,x;
    cin>>n>>x;
    if(x>=n)cout<<0<<endl;
    else{
        if((n-x)%4==0)cout<<(n-x)/4<<endl;
        else cout<<(n-x)/4+1<<endl;
    }
    
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    
    int t;
    cin>>t;
    while(t--){
        solution();
    }

    return 0;
}
