#include <bits/stdc++.h>
#define ll long long

using namespace std;
void solution(){
    int n;
    cin>>n;
    string s;
    cin>>s;
    int c=0;
    for(int i=0;i<n-1;i++){
        if(s[i]=='1' && s[i+1]=='0'){
            c++;
        }
    }
    cout<<c<<endl;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    
    int t;
    cin>>t;
    while(t--){
        solution();
    }

    return 0;
}
