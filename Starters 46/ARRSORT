#include <bits/stdc++.h>
#define ll long long

using namespace std;
void solution(){
    int n;
    cin>>n;
    int k=0;
    //vector<int> v(n+1);
    //vector<int> vec(n+1);
    for(int i=1;i<=n;i++){
        int x;
        cin>>x;
        k=__gcd(k,abs(x-i));
        
    }
    cout<<k<<endl;
}

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    
    int t;
    cin>>t;
    while(t--){
        solution();
    }

    return 0;
}
