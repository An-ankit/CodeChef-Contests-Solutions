#include <bits/stdc++.h>
#define ll long long

using namespace std;
void solution(){
    int n;
    cin>>n;
    string s;
    if(n%2==0){
        s+='1';
        for(int i=0;i<(n-2);i++){
            s+='0';
        }
        s+='1';
        cout<<s<<endl;
    }
    else{
        for(int i=0;i<(n-1)/2;i++){
            s+='0';
        }
        s+='1';
        for(int i=0;i<(n-1)/2;i++){
            s+='0';
        }
        cout<<s<<endl;
        
    }
    
}

int main()
{
    int t;
    cin>>t;
    while(t--){
        solution();
    }

    return 0;
}
